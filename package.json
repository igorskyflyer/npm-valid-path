{
    "name": "@igorskyflyer/valid-path",
    "version": "3.0.0",
    "description": "🧰 Determines whether a given value can be a valid file/directory name. 🏜",
    "sideEffects": false,
    "engines": {
        "node": ">=22.0"
    },
    "type": "module",
    "types": "./dist/index.d.ts",
    "main": "./dist/index.js",
