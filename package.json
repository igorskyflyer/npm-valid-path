    "keywords": [
        "path",
        "validation",
        "file",
        "directory",
        "windows",
        "unix",
        "max-path-length",
        "invalid-characters",
        "cross-platform",
        "isvalidpath",
        "isvalidpathwin",
        "isvalidpathunix",
        "validpath",
        "os",
        "charsinstring",
        "slash",
        "iswindowsdevice",
        "javascript",
        "typescript",
        "nodejs",
        "filesystem",
        "igor dimitrijević",
        "igorskyflyer"
    ],
    "license": "MIT",
    "author": "Igor Dimitrijević <support@igorskyflyer.me> (https://github.com/igorskyflyer)",
    "funding": "https://ko-fi.com/igorskyflyer",
    "homepage": "https://github.com/igorskyflyer/npm-valid-path",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/igorskyflyer/npm-valid-path.git"
    },
    "bugs": {
        "url": "https://github.com/igorskyflyer/npm-valid-path/issues"
    },
